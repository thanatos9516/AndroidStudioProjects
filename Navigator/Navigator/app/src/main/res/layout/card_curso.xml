<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textAppearance="?android:attr/textAppearanceLarge"
             android:text="Compra:"
             android:id="@+id/titulo"
             android:layout_alignParentTop="true"
             android:layout_marginLeft="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Id:"
            android:id="@+id/lblID"
            android:layout_below="@+id/titulo"
            android:layout_alignLeft="@+id/titulo" />


        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Descripcion:"
        android:id="@+id/lbldescripcion"
            android:layout_below="@+id/lblID"
            android:layout_alignLeft="@+id/lblID"  />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Total:"
            android:id="@+id/lblTotal"
            android:layout_below="@+id/lbldescripcion"
            android:layout_alignLeft="@+id/lbldescripcion"
            android:layout_marginBottom="10dp"/>


         <View
             android:layout_width="wrap_content"
             android:layout_height="1dp"
             android:background="#ffd5d5d5"
             android:id="@+id/linea"
             android:layout_above="@+id/compartir">

         </View>

         <ImageView

            android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/compartir"
             android:layout_alignParentBottom="true"
             android:layout_alignParentRight="true"
             android:src="@android:drawable/ic_menu_share"
             android:background="@color/material_blue_grey_800" />

         </RelativeLayout>
</android.support.v7.widget.CardView>