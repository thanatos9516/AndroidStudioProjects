<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.thanatos.examen1.Clave"
    android:background="@drawable/fondo">

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/txtUsuarioClave"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/textos"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="   Cedula" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txtClaveVieja"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/textos"
        android:layout_below="@+id/txtUsuarioClave"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="Contraseña Actual" />
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txtClaveNueva"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/textos"
        android:layout_below="@+id/txtClaveVieja"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="Contraseña Nueva" />
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txtRepita"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/textos"
        android:layout_below="@+id/txtClaveNueva"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="Contraseña Nueva" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cambiar Clave"
        android:id="@+id/btnGuardar"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/redondeado"

        />

</RelativeLayout>
