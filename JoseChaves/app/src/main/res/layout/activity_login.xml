<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtUsuarioLogin"
        android:hint="504340834"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="*******"
        android:ems="10"
        android:id="@+id/txtClaveLogin"
        android:layout_below="@+id/txtUsuarioLogin"
        android:layout_alignLeft="@+id/txtUsuarioLogin"
        android:layout_alignStart="@+id/txtUsuarioLogin" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingresar"
        android:id="@+id/btnIngresar"
        android:layout_below="@+id/txtClaveLogin"
        android:layout_alignLeft="@+id/txtClaveLogin"
        android:layout_alignStart="@+id/txtClaveLogin"
        android:layout_alignRight="@+id/txtClaveLogin"
        android:layout_alignEnd="@+id/txtClaveLogin" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrarse"
        android:id="@+id/btnRegistrar"
        android:layout_alignRight="@+id/btnIngresar"
        android:layout_alignEnd="@+id/btnIngresar"
        android:layout_below="@+id/btnIngresar"
        android:layout_alignLeft="@+id/btnIngresar"
        android:layout_alignStart="@+id/btnIngresar" />
</RelativeLayout>